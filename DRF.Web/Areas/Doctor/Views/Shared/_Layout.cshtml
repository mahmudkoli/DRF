    <script type="text/javascript">
        $(document).ready(function () {

            function setNotification(notify) {
                console.log(notify);
                $('#notify-list').empty();
                $("#notify-count").text('');
                if (notify.length == 0) {
                    //$("#notify-count").hide();
                    return;
                }
                $("#notify-count").text(notify.length);
                $.each(notify, function (index, value) {
                    var url = '@Url.Action("GoToDetails","Notification", new { Area="" })?entityTypeId=' + value.EntityTypeId + '&entityId=' + value.EntityId;
                    var line = '<li><a href="' + url + '"><i class="fa fa-users text-aqua"></i>Appointment request from ' + value.ActorName + ' </a></li>';
                    $('#notify-list').append(line);
                });
            }

            var hub = $.connection.notificationHub;

            //Client Call
            hub.client.broadcastNotify = function (notify) {
                setNotification(notify)
            };


            //$.connection.hub.start().done(function () { });

            $.connection.hub.start()
                .done(function () {
                    console.log("Hub Connected!");

                    //Server Call
                    hub.server.getNotification();

                })
                .fail(function () {
                    console.log("Could not Connect!");
                });

            $.connection.hub.disconnected(function () {
                if ($.connection.hub.lastError) {
                    console.log("Disconnected. Reason: " + $.connection.hub.lastError.message);
                    //alert("Disconnected. Reason: " + $.connection.hub.lastError.message);
                }
            });

            $.connection.hub.error(function(error) {
                console.log('Signalr Error: ' + error);
                //alert('SignalrAdapter: ' + error);
            });

            hub.client.exceptionHandler = function (error) {
                  console.log('Signalr Exception: ' + error);
                  //alert('SignalrAdapter: ' + error);
            };
        });
    </script>

